{
    "problemMatcher": [
        {
            "owner": "shellcheck_error",
            "severity": "error",
            "pattern": [
                {
                    "regexp": "^./(.*\\.sh):([0-9]+):([0-9]+): ((?:error|warning|info|style): .+)\\[(SC[0-9]+)\\]$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4,
                    "code": 5
                }
            ]
        },
        {
            "owner": "shellcheck_warning",
            "severity": "warning",
            "pattern": [
                {
                    "regexp": "^./(.*\\.sh):([0-9]+):([0-9]+): ((?:note): .+)\\[(SC[0-9]+)\\]$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4,
                    "code": 5
                }
            ]
        }
    ]
}